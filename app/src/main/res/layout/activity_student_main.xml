<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="30dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.emiliedoyle.peer_mentoring_app.StudentMainActivity"
    >

    <TextView
        android:text="Hello Student! \n Welcome to the Peer Mentor Matching App!"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/text1"
        android:textSize="25dp"
        android:textColor="#9e64d8"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_above="@+id/text2"
        android:src="@drawable/white"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:text="Please select one of the following options:"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/text2"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/FindButton"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/FindButton"
        android:text="Find a Mentor"
        android:onClick="findAMentor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_corner"
        android:layout_above="@+id/ManageProfileButton"
        />
    <!-- the add a mentor button will be changed to update profile for the regular users-->
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/ManageProfileButton"
        android:text="Manage Profile"
        android:onClick="manageMentors"
        android:layout_above="@+id/YourConnectionsButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/round_corner" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/YourConnectionsButton"
        android:text="Your Connections"
        android:onClick="manageMentors"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/ManageProfileButton"
        android:layout_alignEnd="@+id/ManageProfileButton"
        android:background="@drawable/round_corner"/>

</RelativeLayout>
