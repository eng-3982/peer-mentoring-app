<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.emiliedoyle.peer_mentoring_app.MenteeRegisterActivity">


    <TextView android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="#9e64d8"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:textColorHint="#898686"
        android:ems="10"
        android:id="@+id/enterName"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/enterEmail"
        android:layout_below="@+id/enterName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="E-mail"
        android:textColorHint="#898686"
        android:layout_alignRight="@+id/enterName"
        android:layout_alignEnd="@+id/enterName"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enterPassword"
        android:layout_below="@+id/enterEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Password"
        android:textColorHint="#898686"
        android:layout_alignRight="@+id/enterName"
        android:layout_alignEnd="@+id/enterName" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirmPassword"
        android:layout_below="@+id/enterPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Confirm Password"
        android:textColorHint="#898686"
        android:layout_alignRight="@+id/enterName"
        android:layout_alignEnd="@+id/enterName" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Major"
        android:textColorHint="#898686"
        android:ems="10"
        android:id="@+id/enterMajor"
        android:layout_below="@+id/confirmPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Class Year"
        android:textColorHint="#898686"
        android:ems="10"
        android:id="@+id/enterClassYear"
        android:layout_below="@+id/enterMajor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/menteeRegisterButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>