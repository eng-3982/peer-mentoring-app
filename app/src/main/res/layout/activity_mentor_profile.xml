<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.emiliedoyle.peer_mentoring_app.MentorProfileActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Claire Durand"
        android:textColor="#9e64d8"
        android:textSize="40dp"
        android:id="@+id/mentorName"
        android:layout_gravity="left" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Major: Electrical Engineering, Computer Engineering Concentration"
        android:id="@+id/mentorMajor"
        android:layout_below="@+id/mentorName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="E-mail Address: claire.durand@temple.edu"
        android:id="@+id/mentorEmail"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/mentorMajor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Class Year: 2016"
        android:id="@+id/mentorClassYear"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/mentorEmail"
        android:layout_alignLeft="@+id/mentorEmail"
        android:layout_alignStart="@+id/mentorEmail"
        android:layout_marginTop="64dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Request Mentor"
        android:id="@+id/requestMentor"
        android:layout_below="@+id/mentorClassYear"
        android:layout_alignRight="@+id/mentorEmail"
        android:layout_alignEnd="@+id/mentorEmail" />


</RelativeLayout>
