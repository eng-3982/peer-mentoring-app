<?xml version="1.0" encoding="utf-8"?>
< RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="30dp"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

<TextView
    android:text="Hello SuperU! Welome to the \n Peer Mentor Matching App!"
    android:layout_width="wrap_content"
    android:layout_height="75dp"
    android:id="@+id/text1"
    android:textSize="25dp"
    android:textColor="#9e64d8"
    android:textStyle="bold"
    android:gravity="center_horizontal"
    />
<TextView
    android:text="Please select one of the options below:"
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:id="@+id/text2"
    android:textSize="18dp"
    android:layout_below="@+id/pm"
    android:textColor="#000000"
    android:layout_centerHorizontal="true"
    android:textStyle="bold"
    android:gravity="bottom"/>
<ImageView
    android:layout_width="fill_parent"
    android:layout_height="150dp"
    android:id="@+id/pm"
    android:layout_below="@+id/text1"
    android:src="@drawable/pm"
    android:layout_alignLeft="@+id/text2"
    android:layout_alignStart="@+id/text2" />
<Button
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/AddAdminButton"
    android:layout_below="@+id/text2"
    android:text="Add an Admin"
    android:onClick="findAMentor"
    />
<Button
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/AddButton"
    android:layout_below="@+id/AddAdminButton"
    android:text="Add a Mentor"
    android:onClick="addAMentor"
    />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ManageButton"
        android:layout_below="@+id/ChangePasswordButton"
        android:text="Manage Network"
        android:onClick="manageMentors"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ChangePasswordButton"
        android:layout_below="@+id/AddButton"
        android:text="Change Password"
        android:onClick="changePasswordMentors"
        />
</RelativeLayout>